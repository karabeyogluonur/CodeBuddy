@model TalentUpdateModel

<form asp-action="Update" class="form" asp-controller="Talent" method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.Id)
    <h1 class="h3 mb-3 font-weight-normal">Yetenek Güncelle</h1>
    <div class="mb-3">
        <label asp-for="Name" class="sr-only">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Name" required autofocus>
        <span class="form-text text-danger " asp-validation-for="Name"></span>
    </div>

    <div class="form-check">
        <input asp-for="Active" class="form-check-input" type="checkbox">
        <label asp-for="Active" class="form-check-label">
            Active
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="ImageFile" class="form-label">Dosya Seçiniz...</label>
        <input asp-for="ImageFile" class="form-control" type="file">
    </div>
    <div class="form-check">
        <input asp-for="ChangeImage" class="form-check-input" type="checkbox">
        <label asp-for="ChangeImage" class="form-check-label">
            Yetenek resmi değiştirilsin mi?
        </label>
    </div>

    <button class="btn btn-lg btn-primary btn-block" type="submit">Güncelle</button>
</form>